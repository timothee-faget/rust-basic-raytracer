# Camera
camera {
    position: 0.0 3.0 15.0
    rotation: 0.0 0.0 1.0 -0.05  # quaternion wxyz
    focal_length: 5.0
    fov: 40.0
    resolution: 1280 720
}

# Lights
light {
    position: 5.0 5.0 5.0
    color: 0.6 0.6 0.6
}

light {
    position: -5.0 5.0 5.0
    color: 0.6 0.6 0.6
}

light {
    position: 5.0 5.0 -5.0
    color: 0.6 0.6 0.6
}

light {
    position: -5.0 5.0 -5.0
    color: 0.6 0.6 0.6
}

# Materials 
material {
  name: mat_1
  ambient: 0.3 0.0 0.0
  diffuse: 1.0 0.0 0.0
  specular: 1.0 1.0 1.0
  shininess: 50
}

material {
  name: mat_2
  ambient: 0.0 0.3 0.3
  diffuse: 0.0 1.0 1.0
  specular: 0.4 0.4 0.4
  shininess: 20
}

material {
  name: mat_3
  ambient: 0.3 0.0 0.3
  diffuse: 1.0 0.0 1.0
  specular: 0.4 0.4 0.4
  shininess: 20
}

material {
  name: mat_4
  ambient: 0.3 0.3 0.0
  diffuse: 1.0 1.0 0.0
  specular: 0.4 0.4 0.4
  shininess: 30
}

material {
  name: mat_5
  ambient: 0.0 0.0 0.3
  diffuse: 0.0 0.0 1.0
  specular: 0.4 0.4 0.4
  shininess: 40
}


material {
  name: mat_plan
  ambient: 0.7 0.7 1.0
  diffuse: 0.4 0.4 0.8
  specular: 0.0 0.0 0.0
  shininess: 1
}

# Spheres
sphere {
    position: 1.2 0.5 1.0
    radius: 0.5
    mat: mat_2
}

sphere {
    position: 1.2 0.5 -1.0
    radius: 0.5
    mat: mat_3
}

sphere {
    position: -1.2 0.5 1.0
    radius: 0.5
    mat: mat_4
}

sphere {
    position: -1.2 0.5 -1.0
    radius: 0.5
    mat: mat_5
}

sphere {
    position: 0.0 1.8 0.0
    radius: 0.8
    mat: mat_1
}

# Planes
plane {
  point: 0.0 0.0 0.0
  normal: 0.0 1.0 0.0
  mat: mat_plan
}

