# Camera
camera {
    position: 0.0 0.0 20.0
    rotation: 0.0 0.0 1.0 0.0  # quaternion wxyz
    focal_length: 5.0
    fov: 40.0
    resolution: 3840 2160
}

# Lights
light {
    position: 5.0 5.0 5.0
