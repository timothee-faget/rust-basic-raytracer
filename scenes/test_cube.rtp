# Camera
camera {
    position: 0.0 3.0 15.0
    rotation: 0.0 0.0 1.0 -0.05  # quaternion wxyz
    focal_length: 5.0
    fov: 30.0
    # resolution: 3840 2160
    # resolution: 1920 1080
    # resolution: 1280 720
    resolution: 720 480
}

# Lights
point_light {
    position: 3.0 5.0 3.0
    color: 0.7 0.0 0.7
}

point_light {
    position: -3.0 5.0 3.0
    color: 0.0 0.7 0.7
}

point_light {
    position: 3.0 5.0 -3.0
    color: 0.7 0.7 0.0
}
point_light {
    position: -3.0 5.0 -3.0
    color: 0.7 0.7 0.7
}

# Materials 
material {
  name: mat_1
  ambient: 0.3 0.3 0.3
  diffuse: 1.0 1.0 1.0
  specular: 1.0 1.0 1.0
  shininess: 250
}

material {
  name: mat_2
  ambient: 0.0 0.3 0.3
  diffuse: 0.0 1.0 1.0
  specular: 0.4 0.4 0.4
  shininess: 20
}

material {
  name: mat_3
  ambient: 0.3 0.0 0.3
  diffuse: 1.0 0.0 1.0
  specular: 0.4 0.4 0.4
  shininess: 20
}

material {
  name: mat_4
  ambient: 0.3 0.3 0.0
  diffuse: 0.5 0.0 1.0
  specular: 0.4 0.4 0.4
  shininess: 30
}

material {
  name: mat_5
  ambient: 0.0 0.0 0.3
  diffuse: 0.5 0.0 1.0
  specular: 0.4 0.4 0.4
  shininess: 40
}


material {
  name: mat_plan
  ambient: 0.7 0.7 0.7
  diffuse: 0.5 0.5 0.5
  specular: 0.2 0.2 0.2
  shininess: 1
}

# Spheres
sphere {
    position: 1.2 0.5 1.0
    radius: 0.5
    mat: mat_1
}



# Planes
plane {
  point: 0.0 0.0 0.0
  normal: 0.0 1.0 0.0
  mat: mat_plan
}

plane {
  point: 0.0 0.0 -7.0
  normal: 0.0 0.0 1.0
  mat: mat_2
}

plane {
  point: 3.5 0.0 0.0
  normal: -1.0 0.0 0.0
  mat: mat_4
}

plane {
  point: -3.5 0.0 0.0
  normal: 1.0 0.0 0.0
  mat: mat_3
}


# Cubes
cube {
  position: 0.5 0.0 -2.0
  rotation: 0.924 0.0 0.383 0.0
  size: 1.0
  mat: mat_1
}
